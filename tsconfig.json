{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2017",
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "paths": {
      "utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
